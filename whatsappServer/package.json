{
  "name": "whatsapp-server",
  "version": "1.0.0",
  "description": "WhatsApp API server for chatterbox MCP",
  "main": "dist/server.js",
  "scripts": {
    "start:unix": "NODE_ENV=production node dist/server.js",
    "start": "set NODE_ENV=production && node ./dist/server.js",
    "dev": "nodemon src/server.ts",
    "debug": "nodemon --inspect=0.0.0.0:9229 src/server.ts",
    "build": "tsc",
    "setup": "cp .env.example .env",
    "docker:local": "npm run build && docker build -t whatsapp-server .",
    "test": "jest"
  },
  "dependencies": {
    "@types/qrcode-terminal": "^0.12.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "whatsapp-web.js": "^1.23.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/node": "^22.14.0",
    "@types/qrcode": "^1.5.2",
    "jest": "^29.5.0",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
